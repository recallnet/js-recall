{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2022",
    "lib": ["DOM", "ES2022"],
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": true,
    "importHelpers": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true
  },
  "exclude": ["node_modules", "coverage", "**/*.test.ts"]
}
