{
  "name": "@recall/fvm",
  "version": "0.0.0",
  "description": "FVM formats and utilities for Recall",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hokunet/js-recall.git",
    "directory": "packages/fvm"
  },
  "homepage": "https://github.com/hokunet/js-recall#readme",
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "license": "MIT AND Apache-2.0",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "directories": {
    "dist": "./dist"
  },
  "files": [
    "dist/**/*.js(.map)",
    "dist/**/*.d.ts",
    "dist/**/package.json",
    "src/**/*.ts"
  ],
  "scripts": {
    "prepublishOnly": "pnpm build",
    "test": "pnpm test:mocha",
    "test:mocha": "mocha --exit",
    "test:ci": "pnpm coverage",
    "coverage": "c8 --exclude test --exclude dist mocha --exit",
    "docs": "typedoc --entryPoints src/index.ts",
    "clean": "rm -rf dist coverage docs",
    "build:esm": "pnpm tsc",
    "build": "pnpm build:esm"
  },
  "dependencies": {
    "blakejs": "^1.2.1",
    "cborg": "^4.2.6",
    "uint8arrays": "^5.1.0"
  },
  "devDependencies": {
    "@types/chai": "^5.0.1",
    "@types/chai-as-promised": "^8.0.1",
    "@types/mocha": "^10.0.10",
    "@recall/eslint-config": "workspace:*",
    "@recall/typescript-config": "workspace:*",
    "chai": "^5.1.2",
    "chai-as-promised": "^8.0.1",
    "typescript": "^5.7.3"
  }
}
