{
  "name": "@recallnet/rewards",
  "version": "0.0.1",
  "license": "MIT AND Apache-2.0",
  "private": true,
  "description": "Recall Network rewards system.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/recallnet/js-recall.git",
    "directory": "packages/rewards"
  },
  "homepage": "https://github.com/recallnet/js-recall#readme",
  "type": "module",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "tsc --watch",
    "build": "tsup",
    "clean": "rm -rf .turbo node_modules dist",
    "lint": "eslint . --max-warnings 0",
    "format": "prettier --write . --ignore-path=../../.prettierignore",
    "format:check": "prettier --check . --ignore-path=../../.prettierignore",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "docs:check": "typedoc --emit none",
    "docs:build": "typedoc",
    "docs:watch": "typedoc --watch",
    "docs:serve": "typedoc --watch --serve",
    "verify": "tsx scripts/verify.ts",
    "generate": "tsx scripts/generate.ts"
  },
  "dependencies": {
    "decimal.js-light": "^2.5.1"
  },
  "devDependencies": {
    "@recallnet/eslint-config": "workspace:*",
    "@recallnet/typescript-config": "workspace:*",
    "@types/node": "^24.3.0",
    "tsx": "^4.19.2",
    "tsup": "^8.3.6",
    "typedoc": "^0.28.1",
    "typedoc-plugin-coverage": "^3.4.1",
    "typedoc-plugin-markdown": "^4.6.0",
    "typescript": "^5.7.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.0.9"
  }
}
