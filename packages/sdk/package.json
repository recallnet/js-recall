{
  "name": "@hokunet/sdk",
  "version": "0.0.0",
  "description": "Core SDK for building with Hoku EVM contracts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hokunet/js-hoku.git",
    "directory": "packages/sdk"
  },
  "homepage": "https://github.com/hokunet/js-hoku#readme",
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "license": "MIT AND Apache-2.0",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "directories": {
    "dist": "./dist"
  },
  "files": [
    "dist/**/*.js(.map)",
    "dist/**/*.d.ts",
    "dist/**/package.json",
    "src/**/*.ts"
  ],
  "scripts": {
    "prepublishOnly": "npm run build",
    "test": "npm run test:mocha",
    "test:mocha": "mocha --exit",
    "test:ci": "npm run coverage",
    "coverage": "c8 --exclude test --exclude dist mocha --exit",
    "docs": "typedoc --entryPoints src/index.ts",
    "clean": "rm -rf dist coverage docs",
    "build:esm": "npx tsc",
    "build": "npm run build:esm"
  },
  "dependencies": {
    "@consensus-shipyard/ipc-contracts": "1.0.0-alpha.0",
    "@cosmjs/encoding": "^0.32.4",
    "@cosmjs/tendermint-rpc": "^0.32.4",
    "@glif/filecoin-address": "^3.0.12",
    "@sindresorhus/fnv1a": "^3.1.0",
    "ethers": "^6.13.2",
    "uint8arrays": "^5.1.0"
  }
}
