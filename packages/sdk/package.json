{
  "name": "@recallnet/sdk",
  "version": "0.0.0",
  "license": "MIT AND Apache-2.0",
  "publishConfig": {
    "access": "public"
  },
  "description": "Core SDK for building with Recall EVM contracts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/recallnet/js-recall.git",
    "directory": "packages/sdk"
  },
  "homepage": "https://github.com/recallnet/js-recall#readme",
  "type": "module",
  "exports": {
    "./chains": {
      "types": "./dist/chains.d.ts",
      "import": "./dist/chains.mjs",
      "require": "./dist/chains.cjs"
    },
    "./client": {
      "types": "./dist/client.d.ts",
      "import": "./dist/client.mjs",
      "require": "./dist/client.cjs"
    },
    "./constants": {
      "types": "./dist/constants.d.ts",
      "import": "./dist/constants.mjs",
      "require": "./dist/constants.cjs"
    },
    "./entities": {
      "types": "./dist/entities.d.ts",
      "import": "./dist/entities.mjs",
      "require": "./dist/entities.cjs"
    },
    "./ipc": {
      "types": "./dist/ipc.d.ts",
      "import": "./dist/ipc.mjs",
      "require": "./dist/ipc.cjs"
    },
    "./network": {
      "types": "./dist/network.d.ts",
      "import": "./dist/network.mjs",
      "require": "./dist/network.cjs"
    },
    "./provider": {
      "types": "./dist/provider.d.ts",
      "import": "./dist/provider.mjs",
      "require": "./dist/provider.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "test": "pnpm test:mocha",
    "test:mocha": "mocha --exit",
    "test:ci": "pnpm coverage",
    "coverage": "c8 --exclude test --exclude dist mocha --exit",
    "docs": "typedoc --entryPoints src/index.ts",
    "clean": "rm -rf .turbo node_modules dist coverage docs"
  },
  "dependencies": {
    "@noble/hashes": "^1.5.0",
    "@recallnet/contracts": "workspace:*",
    "@recallnet/fvm": "workspace:*",
    "@sindresorhus/fnv1a": "^3.1.0",
    "file-type": "^19.6.0",
    "uint8arrays": "^5.1.0",
    "viem": "^2.21.37"
  },
  "devDependencies": {
    "@recallnet/eslint-config": "workspace:*",
    "@recallnet/typescript-config": "workspace:*",
    "@types/chai": "^5.0.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.10.7",
    "chai": "^5.1.2",
    "mocha": "^11.0.1",
    "tempy": "^3.1.0",
    "ts-node": "^10.9.2",
    "tsup": "^8.3.6"
  }
}
