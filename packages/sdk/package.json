{
  "name": "@recall/sdk",
  "version": "0.0.1-rc.0",
  "license": "MIT AND Apache-2.0",
  "description": "Core SDK for building with Recall EVM contracts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/recallnet/js-recall.git",
    "directory": "packages/sdk"
  },
  "homepage": "https://github.com/recallnet/js-recall#readme",
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "test": "pnpm test:mocha",
    "test:mocha": "mocha --exit",
    "test:ci": "pnpm coverage",
    "coverage": "c8 --exclude test --exclude dist mocha --exit",
    "docs": "typedoc --entryPoints src/index.ts",
    "clean": "rm -rf .turbo node_modules dist coverage docs"
  },
  "dependencies": {
    "@noble/hashes": "^1.5.0",
    "@recall/contracts": "workspace:*",
    "@recall/fvm": "workspace:*",
    "@sindresorhus/fnv1a": "^3.1.0",
    "file-type": "^19.6.0",
    "uint8arrays": "^5.1.0",
    "viem": "^2.21.37"
  },
  "devDependencies": {
    "@recall/eslint-config": "workspace:*",
    "@recall/typescript-config": "workspace:*",
    "@types/chai": "^5.0.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.10.7",
    "chai": "^5.1.2",
    "mocha": "^11.0.1",
    "tempy": "^3.1.0",
    "ts-node": "^10.9.2"
  }
}
