{
  "name": "@recallnet/staking-contracts",
  "version": "1.0.0",
  "description": "",
  "type": "module",
  "private": true,
  "exports": {
    "./rewards-allocator": {
      "import": {
        "types": "./dist/rewards-allocator.d.ts",
        "default": "./dist/rewards-allocator.js"
      },
      "require": {
        "types": "./dist/rewards-allocator.d.cts",
        "default": "./dist/rewards-allocator.cjs"
      }
    }
  },
  "scripts": {
    "build": "tsup",
    "test": "pnpm hardhat test nodejs",
    "test:coverage": "c8 pnpm hardhat test nodejs",
    "lint": "eslint . --max-warnings 0",
    "format": "prettier --write . --ignore-path=../../.prettierignore",
    "format:check": "prettier --check . --ignore-path=../../.prettierignore"
  },
  "c8": {
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "src/**/*.test.ts",
      "src/**/*.spec.ts",
      "contracts/**/*"
    ],
    "reporter": [
      "text",
      "json",
      "json-summary"
    ],
    "reports-dir": "coverage"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.6.4",
  "dependencies": {
    "@openzeppelin/contracts": "^5.3.0",
    "@openzeppelin/contracts-upgradeable": "^5.3.0"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.8",
    "@nomicfoundation/hardhat-ethers": "^3.0.8",
    "@nomicfoundation/hardhat-ignition": "^3.0.0",
    "@nomicfoundation/hardhat-toolbox-viem": "^5.0.0",
    "@openzeppelin/contracts": "^5.3.0",
    "@openzeppelin/contracts-upgradeable": "^5.3.0",
    "@types/node": "^22.15.19",
    "c8": "^10.1.3",
    "ethers": "^6.14.0",
    "forge-std": "github:foundry-rs/forge-std#v1.9.4",
    "hardhat": "^3.0.3",
    "merkletreejs": "^0.5.2",
    "tsup": "^8.3.6",
    "typescript": "^5.8.3",
    "viem": "^2.30.0",
    "vitest": "^1.0.0"
  }
}
