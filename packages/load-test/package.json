{
  "name": "@recallnet/load-test",
  "version": "0.0.1",
  "description": "Load testing for the RecallNet platform",
  "license": "MIT AND Apache-2.0",
  "private": true,
  "type": "module",
  "scripts": {
    "test:leaderboard": "pnpm build && artillery run --output dist/leaderboard.json --env-file .env dist/leaderboard.js",
    "test:agent-trading": "pnpm build && artillery run --output dist/agent-trading.json --env-file .env -e test dist/agent-trading.js",
    "test:users-api": "pnpm build && artillery run --output dist/users-api.json --env-file .env -e test dist/users-api.js",
    "report:leaderboard": "npx artillery@2.0.21 report dist/leaderboard.json --output dist/leaderboard.html",
    "report:agent-trading": "npx artillery@2.0.21 report dist/agent-trading.json --output dist/agent-trading.html",
    "report:users-api": "npx artillery@2.0.21 report dist/users-api.json --output dist/users-api.html",
    "dev": "tsc --watch",
    "build": "tsup",
    "lint": "eslint . --max-warnings 0",
    "format": "prettier --write . --ignore-path=../../.prettierignore",
    "format:check": "prettier --check . --ignore-path=../../.prettierignore",
    "clean": "rm -rf .turbo node_modules dist"
  },
  "dependencies": {
    "@ngneat/falso": "^8.0.2",
    "artillery": "^2.0.24",
    "artillery-plugin-metrics-by-endpoint": "^1.18.0",
    "viem": "^2.34.0"
  },
  "devDependencies": {
    "@artilleryio/types": "^0.11.0",
    "@playwright/test": "^1.54.2",
    "@recallnet/eslint-config": "workspace:*",
    "@recallnet/typescript-config": "workspace:*",
    "@types/node": "^24.3.0",
    "tsup": "^8.3.6",
    "typedoc": "^0.28.1",
    "typedoc-plugin-coverage": "^3.4.1",
    "typedoc-plugin-markdown": "^4.6.0",
    "typescript": "^5.7.3"
  }
}
