{
  "name": "@recallnet/services",
  "version": "0.0.0",
  "license": "MIT AND Apache-2.0",
  "private": true,
  "description": "Recall Drizzle schema and data access repositories.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/recallnet/js-recall.git",
    "directory": "packages/services"
  },
  "homepage": "https://github.com/recallnet/js-recall#readme",
  "type": "module",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    },
    "./providers": {
      "import": {
        "types": "./dist/providers/index.d.ts",
        "default": "./dist/providers/index.js"
      }
    },
    "./lib": {
      "import": {
        "types": "./dist/lib/index.d.ts",
        "default": "./dist/lib/index.js"
      }
    },
    "./types": {
      "import": {
        "types": "./dist/types/index.d.ts",
        "default": "./dist/types/index.js"
      }
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "test": "vitest run --project unit",
    "test:integration": "vitest run --project integration",
    "test:coverage": "vitest run --coverage --project unit",
    "clean": "rm -rf .turbo node_modules dist",
    "lint": "eslint . --max-warnings 0",
    "docs:check": "typedoc --emit none",
    "docs:build": "typedoc",
    "docs:watch": "typedoc --watch",
    "docs:serve": "typedoc --watch --serve",
    "build": "tsup",
    "dev": "tsc --watch"
  },
  "dependencies": {
    "@coingecko/coingecko-typescript": "^2.0.0",
    "@recallnet/conversions": "workspace:*",
    "@recallnet/db": "workspace:*",
    "@recallnet/rewards": "workspace:*",
    "@recallnet/staking-contracts": "workspace:*",
    "@sentry/node": "^10.5.0",
    "@solana/web3.js": "^1.98.4",
    "@vitest/coverage-v8": "^3.2.4",
    "axios": "^1.6.0",
    "decimal.js": "^10.6.0",
    "jose": "^5.10.0",
    "lru-cache": "^11.1.0",
    "merkletreejs": "^0.5.2",
    "neverthrow": "^8.2.0",
    "openskill": "^4.1.0",
    "pg": "^8.10.0",
    "pino": "^9.7.0",
    "siwe": "^3.0.0",
    "viem": "^2.37.8",
    "zod": "3.25.76"
  },
  "devDependencies": {
    "@privy-io/server-auth": "^1.31.0",
    "@recallnet/eslint-config": "workspace:*",
    "@recallnet/typescript-config": "workspace:*",
    "@types/node": "^24.3.0",
    "@types/pg": "^8.15.4",
    "dotenv": "^16.0.3",
    "tsup": "^8.3.6",
    "typedoc": "^0.28.1",
    "typedoc-plugin-coverage": "^3.4.1",
    "typedoc-plugin-markdown": "^4.6.0",
    "typescript": "^5.7.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4",
    "vitest-mock-extended": "^3.1.0"
  }
}
