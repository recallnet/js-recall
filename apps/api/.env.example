# Server Configuration
PORT=3000
NODE_ENV=development

# Frontend Configuration
FRONTEND_URL=http://localhost:3001 # Enable CORS
DOMAIN=.example.com # Cross-subdomain cookies (only set in production mode)
SESSION_TTL=7200 # Session expiry (defaults to 2 hours)
COOKIE_NAME=session # Session cookie name (defaults to `session`)

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/trading_simulator
DB_SSL= # optional
DB_CA_CERT_PATH=./certs/your-certification.crt # optional
DB_CA_CERT_BASE64=LS0tLS1C... # optional

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Security
ROOT_ENCRYPTION_KEY=your_encryption_key_here

# Sentry Monitoring (optional but recommended for production)
SENTRY_DSN=
SENTRY_ENVIRONMENT=development
ENABLE_SENTRY_DB_MONITORING=false

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
DISABLE_RATE_LIMITER=false

# Multi-Chain Initial Balances

# Solana Virtual Machine (SVM) Balances
INITIAL_SVM_SOL_BALANCE=0  # Initial SOL balance for Solana
INITIAL_SVM_USDC_BALANCE=5000 # Initial USDC balance for Solana
INITIAL_SVM_USDT_BALANCE=0 # Initial USDT balance for Solana

# Specific EVM Chain Balances
# These override the default EVM balances for specific chains
# Ethereum Mainnet
INITIAL_ETH_ETH_BALANCE=0   # ETH on Ethereum Mainnet
INITIAL_ETH_USDC_BALANCE=5000  # USDC on Ethereum Mainnet
INITIAL_ETH_USDT_BALANCE=0  # USDT on Ethereum Mainnet

# Polygon Chain Tokens (optional)
# INITIAL_POLYGON_ETH_BALANCE=0  # ETH on Polygon
# INITIAL_POLYGON_USDC_BALANCE=0   # USDC on Polygon
# INITIAL_POLYGON_USDT_BALANCE=0   # USDT on Polygon

# Trading constraints (optional, defaults to the following)
DEFAULT_MINIMUM_PAIR_AGE_HOURS=2160
DEFAULT_MINIMUM_24H_VOLUME_USD=500000
DEFAULT_MINIMUM_LIQUIDITY_USD=500000
DEFAULT_MINIMUM_FDV_USD=1000000

# Base Chain Tokens (optional)
# INITIAL_BASE_ETH_BALANCE=0   # ETH on Base
INITIAL_BASE_USDC_BALANCE=5000  # USDC on Base
# INITIAL_BASE_USDT_BALANCE=0  # USDT on Base

# EVM Chain Configuration
# Comma-separated list of EVM chains to query in order of priority
# Available chains: eth, polygon, bsc, arbitrum, optimism, avalanche, base, linea, zksync, scroll, mantle
EVM_CHAINS=eth,polygon,bsc,arbitrum,base,optimism,avalanche,linea

# Tokens
DEFAULT_TOKENS=So11111111111111111111111111111111111111112,EPjFWdd5AufqSSqeM2qN1xzybapC8G4wEGGkZwyTDt1v,Es9vMFrzaCERmJfrF4H2FYD4KCoNkY11McCe8BenwNYB

# Price Cache Configuration
# Maximum number of entries in the price cache
PRICE_CACHE_MAX_SIZE=10000
# Maximum age (in ms) of cached prices before they must be refreshed (1 minute by default)
PRICE_CACHE_TTL_MS=60000

# Active comp cache in milliseconds
CACHE_ACTIVE_COMP_TTL_MS=3000

# Trading Configuration
MAX_TRADE_PERCENTAGE=25          # Maximum trade size as percentage of portfolio value (default: 25)

# Optional: Disable ability for participants to view leaderboard activity (set true to activate)
DISABLE_PARTICIPANT_LEADERBOARD_ACCESS=false

# Agent wallet and email verification URL
API_DOMAIN=http://localhost:3000

# Optional: API prefix (e.g., API_PREFIX=development -> /development/api/...)
API_PREFIX=

# Mailing list
# Loops API Key
LOOPS_API_KEY=email_loops_api_key
# Loops mailing list id
LOOPS_MAILING_LIST_ID=email_loops_mailing_list_id
# Loops API URL (note: only useful for testing purpose to override with a mock server)
# LOOPS_BASE_URL=

# Optional: Logging sampling rates (0.0 - 1.0)
REPOSITORY_LOG_SAMPLE_RATE=0.1 # Default: 0.1
HTTP_LOG_SAMPLE_RATE=0.1 # Default: 0.1
LOG_LEVEL=info # can be fatal, error, warn, info, debug, trace

# Metrics server port (separate from main API port)
METRICS_PORT=3003
METRICS_HOST="127.0.0.1" # Secure by default

# Privy integration
PRIVY_APP_ID=your_privy_app_id
PRIVY_APP_SECRET=your_privy_secret
PRIVY_JWKS_PUBLIC_KEY=your_privy_jwks_base64_key # A base64 encoded JWKS verification public key

# API caching
DISABLE_CACHE_API=false # Disable caching API requests (e.g., dev or test mode)
CACHE_API_LEADERBOARD_MAX_CACHE_SIZE=100
CACHE_API_LEADERBOARD_TTL_MS=1800000 # 30 mins
CACHE_API_COMPETITION_MAX_CACHE_SIZE=100
CACHE_API_COMPETITION_TTL_MS=300000 # 5 mins

# Indexing
INDEXING_ENABLED=true
INDEXING_START_BLOCK=30272553
INDEXING_STAKING_CONTRACT=0x4F93a503972F1d35244C43fD76e0e880e75c14aC
INDEXING_REWARDS_CONTRACT=0x08EB26382777B344e21d0EbE92bB4B32a5FF63b6
INDEXING_HYPERSYNC_URL=https://base-sepolia.hypersync.xyz/
INDEXING_HYPERSYNC_BEARER_TOKEN=dead-beaf-uuid

# Rewards
REWARDS_EOA_ENABLED=false
REWARDS_EOA_PRIVATE_KEY=

REWARDS_SAFE_PROPOSER_ENABLED=false
REWARDS_SAFE_PROPOSER_PRIVATE_KEY= 
REWARDS_SAFE_ADDRESS=
REWARDS_SAFE_API_KEY=

REWARDS_CONTRACT_ADDRESS=0x08EB26382777B344e21d0EbE92bB4B32a5FF63b6
REWARDS_TOKEN_CONTRACT_ADDRESS=0x7323CC5c18DEcCD3e918bbccff80333961d85a88
REWARDS_NETWORK=baseSepolia
RPC_PROVIDER=

# Initial boost amount (in wei) to grant on wallet linking pre TGE
NO_STAKE_BOOST_AMOUNT=500000000000000000000

# Compliance (wallet address checking)
CHAINALYSIS_API_KEY=your_chainalysis_api_key_here

# Symphony API Url
SYMPHONY_API_URL=https://api.symphony.io

# Price provider API for paper trading
PRICE_PROVIDER=dexscreener # Optional, defaults to "dexscreener". Or, use "coingecko"
# If CoinGecko, you must supply an API key and the CoinGecko API key type
# COINGECKO_API_KEY=your_api_key
# COINGECKO_MODE=demo # Defaults to "demo" (free) in non-production NODE_ENV. Else, "pro" (paid) in production.