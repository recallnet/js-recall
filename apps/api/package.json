{
  "name": "api",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "description": "Trading Simulator Server for hosting trading competitions",
  "main": "dist/src/index.js",
  "scripts": {
    "lint": "eslint . --max-warnings 0",
    "lint:fix": "eslint . --fix",
    "start": "node dist/src/index.js",
    "clean": "rm -rf .turbo node_modules dist",
    "dev": "tsx watch src/index.ts",
    "build": "tsc && tsc-alias && copyfiles -u 0 './drizzle/**/*.{sql,json}' dist",
    "test": "vitest run --project unit",
    "test:watch": "vitest watch --project unit",
    "test:e2e": "vitest run --project e2e",
    "test:e2e:watch": "vitest watch --project e2e",
    "test:e2e:runner": "tsx e2e/run-tests.ts",
    "test:multi-chain": "vitest run src/services/providers/__tests__/multi-chain.provider.test.ts",
    "test:multi-chain:e2e": "vitest run e2e/tests/price/multi-chain-provider.test.ts",
    "db:gen-migrations": "NODE_OPTIONS='--import tsx' drizzle-kit generate",
    "db:check": "NODE_OPTIONS='--import tsx' drizzle-kit check",
    "db:migrate": "NODE_OPTIONS='--import tsx' drizzle-kit migrate",
    "db:clean": "tsx scripts/clean-db.ts",
    "db:reset": "pnpm db:clean && pnpm db:migrate",
    "db:drop-all": "NODE_ENV=development tsx scripts/drop-all.ts",
    "db:seed": "tsx scripts/seed-db.ts",
    "db:studio": "NODE_OPTIONS='--import tsx' drizzle-kit studio",
    "generate:secrets": "tsx scripts/generate-secrets.ts",
    "setup:admin": "tsx scripts/setup-admin.ts",
    "setup:all": "tsx scripts/setup-everything.ts",
    "register:team": "tsx scripts/register-team.ts",
    "edit:team": "tsx scripts/edit-team.ts",
    "delete:team": "tsx scripts/delete-team.ts",
    "list:teams": "tsx scripts/list-teams.ts",
    "setup:competition": "tsx scripts/setup-competition.ts",
    "end:competition": "tsx scripts/end-competition.ts",
    "comp:status": "tsx scripts/competition-status.ts",
    "generate-openapi": "tsx -e \"const { swaggerSpec } = require('./src/config/swagger'); require('fs').writeFileSync('./openapi/openapi.json', JSON.stringify(swaggerSpec, null, 2));\"",
    "generate-markdown": "openapi-markdown -i ./openapi/openapi.json -o ./openapi/API.md",
    "generate-docs": "pnpm generate-openapi && pnpm generate-markdown"
  },
  "keywords": [
    "solana",
    "trading",
    "simulation",
    "competition"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@recallnet/api-sdk": "workspace:*",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^18.15.0",
    "axios": "^1.6.0",
    "bcrypt": "^5.1.0",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^16.0.3",
    "drizzle-orm": "^0.43.1",
    "express": "^4.18.2",
    "iron-session": "^8.0.4",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.10.0",
    "rate-limiter-flexible": "^2.4.1",
    "redis": "^4.6.5",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^9.0.0",
    "zod": "^3.25.7"
  },
  "devDependencies": {
    "@elizaos/core": "^0.25.9",
    "@recallnet/eslint-config": "workspace:^",
    "@recallnet/typescript-config": "workspace:*",
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.13",
    "@types/pg": "^8.6.6",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/uuid": "^9.0.1",
    "axios": "^1.6.0",
    "copyfiles": "^2.4.1",
    "drizzle-kit": "^0.31.1",
    "drizzle-seed": "^0.3.1",
    "eslint": "^9.27.0",
    "openapi-markdown": "^1.2.3",
    "siwe": "^3.0.0",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.19.3",
    "typescript": "^5.7.3",
    "viem": "^2.28.1",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.0.9"
  }
}
