{
  "name": "api",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "description": "Trading Simulator Server for hosting trading competitions",
  "main": "dist/src/index.js",
  "scripts": {
    "format": "prettier --write . --ignore-path=../../.prettierignore",
    "format:check": "prettier --check . --ignore-path=../../.prettierignore",
    "lint": "eslint . --max-warnings 0",
    "lint:fix": "eslint . --fix",
    "check-types": "tsc --noEmit",
    "start": "node dist/src/index.js",
    "clean": "rm -rf .turbo node_modules dist",
    "dev": "tsx watch src/index.ts",
    "build": "tsc && tsc-alias && copyfiles -u 0 './drizzle/**/*.{sql,json}' dist",
    "test": "vitest run --project unit",
    "test:watch": "vitest watch --project unit",
    "test:integration": "vitest run --project integration",
    "test:e2e": "vitest run --project e2e",
    "test:all": "vitest run",
    "test:coverage": "vitest run --project unit --coverage",
    "rewards:insert-test-data": "tsx scripts/rewards-insert-test-data.ts",
    "rewards:insert": "tsx scripts/rewards-insert-data.ts",
    "rewards:allocate": "tsx scripts/rewards-allocate.ts",
    "rewards:claim": "tsx scripts/rewards-claim.ts",
    "db:gen-migrations": "NODE_OPTIONS='--import tsx' drizzle-kit generate",
    "db:custom-migration": "NODE_OPTIONS='--import tsx' drizzle-kit generate --custom",
    "db:check": "NODE_OPTIONS='--import tsx' drizzle-kit check",
    "db:migrate": "NODE_OPTIONS='--import tsx' drizzle-kit migrate",
    "db:clean": "tsx scripts/clean-db.ts",
    "db:reset": "pnpm db:clean && pnpm db:migrate",
    "db:prepare-production": "tsx scripts/prepare-production-db.ts",
    "db:drop-all": "NODE_ENV=development tsx scripts/drop-all.ts",
    "db:seed": "tsx scripts/seed-db.ts",
    "db:studio": "NODE_OPTIONS='--import tsx' drizzle-kit studio",
    "generate:secrets": "tsx scripts/generate-secrets.ts",
    "setup:admin": "tsx scripts/setup-admin.ts",
    "setup:all": "tsx scripts/setup-everything.ts",
    "register:agent": "tsx scripts/register-agent.ts",
    "reset:agent:keys": "tsx scripts/reset-all-agent-api-keys.ts",
    "register:user": "tsx scripts/register-user.ts",
    "edit:agent": "tsx scripts/edit-agent.ts",
    "edit:user": "tsx scripts/edit-user.ts",
    "delete:agent": "tsx scripts/delete-agent.ts",
    "delete:user": "tsx scripts/delete-user.ts",
    "list:agents": "tsx scripts/list-agents.ts",
    "list:users": "tsx scripts/list-users.ts",
    "setup:competition": "tsx scripts/setup-competition.ts",
    "end:competition": "tsx scripts/end-competition.ts",
    "comp:status": "tsx scripts/competition-status.ts",
    "scripts:backfill-agent-score": "tsx scripts/backfill-agent-score.ts",
    "scripts:backfill-constraints": "tsx scripts/backfill-comp-constraints.ts",
    "scripts:backfill-stats": "tsx scripts/backfill-stats.ts",
    "scripts:delete-competitions": "tsx scripts/delete-competitions.ts",
    "scripts:populate-agent-handles": "tsx scripts/populate-agent-handles.ts",
    "scripts:migrate-api-key-hashes": "tsx scripts/migrate-api-key-hashes.ts",
    "scripts:generate-merkle-tree": "tsx scripts/generate-merkle-tree.ts",
    "generate-openapi": "tsx scripts/generate-openapi.ts",
    "generate-markdown": "openapi-markdown -i ./openapi/openapi.json -o ./openapi/API.md",
    "generate-docs": "pnpm generate-openapi && pnpm generate-markdown",
    "generate": "pnpm generate-docs && prettier --write openapi",
    "allocate-rewards": "tsx scripts/allocate-rewards.ts",
    "cron:portfolio-snapshot": "tsx scripts/take-portfolio-snapshots.ts",
    "cron:process-perps": "tsx scripts/process-perps-competitions.ts",
    "run:indexer": "tsx scripts/indexer.ts",
    "indexer:internal-tx-claims-update": "tsx scripts/backfill-internal-tx-claims --update",
    "indexer:internal-tx-claims-check": "tsx scripts/backfill-internal-tx-claims",
    "cron:auto-end-competitions": "tsx scripts/auto-end-competitions.ts",
    "cron:auto-start-competitions": "tsx scripts/auto-start-competitions.ts",
    "cron:portfolio-snapshot:run-once": "tsx scripts/take-portfolio-snapshots.ts --run-once",
    "cron:process-perps:run-once": "tsx scripts/process-perps-competitions.ts --run-once",
    "cron:auto-end-competitions:run-once": "tsx scripts/auto-end-competitions.ts --run-once",
    "cron:auto-start-competitions:run-once": "tsx scripts/auto-start-competitions.ts --run-once",
    "cron:auto-calculate-rewards": "tsx scripts/auto-calculate-rewards.ts",
    "cron:auto-calculate-rewards:run-once": "tsx scripts/auto-calculate-rewards.ts --run-once"
  },
  "keywords": [
    "solana",
    "trading",
    "simulation",
    "competition"
  ],
  "author": "",
  "license": "MIT OR Apache-2.0",
  "dependencies": {
    "@envio-dev/hypersync-client": "^0.6.5",
    "@privy-io/server-auth": "^1.31.0",
    "@recallnet/conversions": "workspace:*",
    "@recallnet/db": "workspace:*",
    "@recallnet/rewards": "workspace:*",
    "@recallnet/services": "workspace:*",
    "@recallnet/staking-contracts": "workspace:*",
    "@sentry/node": "^10.5.0",
    "@sentry/profiling-node": "^10.5.0",
    "@types/decimal.js": "^7.4.3",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^18.15.0",
    "axios": "^1.6.0",
    "bcrypt": "^5.1.0",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "decimal.js": "^10.6.0",
    "dotenv": "^16.0.3",
    "drizzle-orm": "^0.43.1",
    "drizzle-zod": "^0.8.2",
    "ejs": "^3.1.10",
    "express": "^4.18.2",
    "jose": "^6.0.11",
    "jsonwebtoken": "^9.0.2",
    "lru-cache": "^11.1.0",
    "merkletreejs": "^0.5.2",
    "node-cron": "^4.2.1",
    "openskill": "^4.1.0",
    "pg": "^8.10.0",
    "pino": "^9.7.0",
    "pino-pretty": "^13.0.0",
    "prom-client": "^15.1.3",
    "qs": "^6.14.0",
    "rate-limiter-flexible": "^2.4.1",
    "redis": "^4.6.5",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^9.0.0",
    "viem": "^2.38.5",
    "zod": "3.25.76"
  },
  "devDependencies": {
    "@elizaos/core": "^0.25.9",
    "@openzeppelin/merkle-tree": "^1.0.8",
    "@recallnet/eslint-config": "workspace:^",
    "@recallnet/test-utils": "workspace:*",
    "@recallnet/typescript-config": "workspace:*",
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.13",
    "@types/ejs": "^3.1.5",
    "@types/papaparse": "^5.5.0",
    "@types/pg": "^8.15.4",
    "@types/qs": "^6.14.0",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/uuid": "^9.0.1",
    "@vitejs/plugin-react": "^5.0.2",
    "@vitest/coverage-v8": "^3.2.4",
    "axios": "^1.6.0",
    "axios-cookiejar-support": "^6.0.2",
    "chalk": "^5.4.1",
    "copyfiles": "^2.4.1",
    "drizzle-kit": "^0.31.1",
    "drizzle-seed": "^0.3.1",
    "jsdom": "^26.1.0",
    "kleur": "^4.1.5",
    "openapi-markdown": "^1.2.3",
    "papaparse": "^5.5.3",
    "siwe": "^3.0.0",
    "tough-cookie": "^5.1.2",
    "tree-kill": "^1.2.2",
    "ts-command-line-args": "^2.5.1",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.19.3",
    "typescript": "^5.7.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4",
    "vitest-mock-extended": "^3.1.0"
  }
}
