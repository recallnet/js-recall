{
  "extends": "@recallnet/typescript-config/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "skipLibCheck": true,
    "module": "esnext",
    "moduleResolution": "node",
    "paths": {
      "@/*": [
        "./*"
      ],
      "@/types": [
        "types/index.ts"
      ],
      "@/utils/*": [
        "utils/*"
      ],
      "@/data-mock/*": [
        "data-mock/*"
      ],
      "@recallnet/ui2/*": [
        "../../packages/ui2/src/*"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "next.config.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
